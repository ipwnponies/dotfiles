{
	"segments": {
		"right": [
			{
				"function": "custom.hostname"
			},
			{
				"function": "powerline.segments.common.time.date",
				"name": "date",
				"args": {
					"format": "%A %Y-%m-%d"
				}
			},
			{
				"function": "powerline.segments.common.time.date",
				"name": "time",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			}
		]
	}
}
