initialZoom 100
continuousView yes
 
bind f any pageDown
bind b any pageUp
 
bind h any scrollLeft(20)
bind j any scrollDown(20)
bind k any scrollUp(20)
bind l any scrollRight(20)
 
bind ctrl-g any gotoPage(1)
bind g any focusToPageNum
bind shift-g any gotoLastPage

bind ctrl-i any goForward
bind ctrl-o any goBackward

unbind p scrLockOff
unbind p scrLockOn
unbind z any
bind p any zoomFitPage
bind w any zoomFitWidth
bind i any zoomIn
bind o any zoomOut
bind z any zoomPercent(100)

unbind n scrLockOff
unbind n scrLockOn
bind / any find
bind n any findNext
 
bind q any quit
